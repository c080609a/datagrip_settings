<templateSet group="SQL">
  <template name="sall" value="select * from $table$$END$;" description="select all rows from a table" toReformat="true" toShortenFQNames="false">
    <variable name="table" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="SQL_STATEMENT" value="true" />
    </context>
  </template>
  <template name="scn" value="select count(*) from $table$ $END$;" description="select the number of specific rows in a table" toReformat="true" toShortenFQNames="false">
    <variable name="table" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="SQL_STATEMENT" value="true" />
    </context>
  </template>
</templateSet>